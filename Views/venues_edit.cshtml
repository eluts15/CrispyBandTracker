@{
  Layout="Shared/_Layout.cshtml";
}

<h3>Edit this Venue: @Model.GetName()</h3>
<form action="/venues/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input type="hidden" name="venue-id" value="@Model.GetId()">
  <label for="edit-venue-name">Edit this Venue's Name?</label>
  <input name="edit-venue-name" type ="text">
  <button type="submit">Change</button>
</form>
<h4><a href="/venues">Back</a></h4>
